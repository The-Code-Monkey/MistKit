{
  "name": "mist-kit",
  "version": "0.0.1",
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "next": "14.2.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "4.0.0-alpha.14",
    "@types/node": "20.12.7",
    "@types/react": "18.2.77",
    "concurrently": "^8.2.2",
    "eslint": "8.57.0",
    "eslint-config-hardcore": "45.4.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-readable-tailwind": "1.3.1",
    "husky": "9.0.11",
    "@techstack/mistcss-test": "0.4.2",
    "nextra": "2.13.4",
    "nextra-theme-docs": "2.13.4",
    "tailwindcss": "4.0.0-alpha.14",
    "typescript": "5.4.5"
  },
  "scripts": {
    "start": "next start",
    "build-storybook": "storybook build",
    "build:mist": "mistcss ./src",
    "build:docs": "next build",
    "build": "bun build:mist && tsc --project tsconfig.build.json",
    "build:copy": "cp ./src/main.css ./dist/esm/main.css && rm -rf package.json && cp ./build.package.json ./package.json",
    "lint": "eslint ./src/primals ./src/atoms ./pages --fix",
    "prepare": "husky",
    "watch:dev": "next dev",
    "watch:mist": "mistcss --watch ./src",
    "watch:css": "tailwindcss --watch -i ./pages/globals.css -o ./pages/main.css",
    "watch": "concurrently \"bun:watch:*\""
  }
}
