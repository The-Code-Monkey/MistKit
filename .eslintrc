{
  "extends": [
    "hardcore",
    "hardcore/fp",
    "hardcore/react",
    "hardcore/react-performance",
    "hardcore/ts",
    "hardcore/prettier"
  ],
  "globals": {
    "Image": "off"
  },
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "new-cap": "off",
    "react/display-name": "off",
    "import/extensions": "off",
    "import/no-unresolved": "off",
    "import/no-cycle": ["error", {"ignoreExternal": false, "maxDepth": 1}],
    "no-object-constructor": "off",
    "sonar/function-return-type": "off",
    "react/no-multi-comp": "off",
    "import/exports-last": "off",
    "import/no-unused-modules": ["error", { "missingExports": true, "unusedExports": true, "ignoreExports": ["pages/**/*.tsx", "pages/**/_meta.json"] }],
    "@typescript-eslint/strict-boolean-expressions": "off",
    "@typescript-eslint/prefer-function-type": "off",
    "@typescript-eslint/consistent-type-assertions": "off",
    "max-statements": "off",
    "react/jsx-props-no-spreading": "off",
    // These are required
    "compat/compat": "off",
    "regexp/require-unicode-regexp": "off",
    "regexp/require-unicode-sets-regexp": "off",
    "@typescript-eslint/no-misused-promises": "off",
    "total-functions/no-partial-division": "off",
    "react/jsx-no-bind": "off",
    "no-underscore-dangle": "off",
    "putout/putout": "off",
    "react/no-danger": "off",
    "react-perf/jsx-no-new-object-as-prop": "off",
//    "readable-tailwind/multiline": ["error", { "printWidth": 100 }],
    "@typescript-eslint/prefer-readonly-parameter-types": "off",
    "no-restricted-syntax": [
      "error",
      "FunctionExpression",
      "FunctionDeclaration"
    ],
    "func-style": "off",
    "react/function-component-definition": [2, { "namedComponents": "arrow-function" }],
    "@typescript-eslint/naming-convention": "off",
    "unicorn/no-abusive-eslint-disable": "off",
    "eslint-comments/no-unlimited-disable": "off",
    "react/forbid-component-props": "off",
    "complexity": "off",
    "@typescript-eslint/no-shadow": ["error", {
      "ignoreTypeValueShadow": true
    }],
    "react/button-has-type": "off",
    "@typescript-eslint/no-unsafe-call": "off",
    "lines-around-comment": "off"
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  },
  "overrides": [
    {
      "files": ["*.test.*"],

      "rules": {
        "max-lines": ["error", 500]
      }
    },
    {
      "files": ["*.mist.tsx"],
      "rules": {
        "id-length": "off",
        "sonarjs/cognitive-complexity": "off",
        "max-lines": "off",
        "@typescript-eslint/prefer-nullish-coalescing": "off",
        "unicorn/prevent-abbreviations": "off",
        "jsx-a11y/alt-text": "off",
        "react/jsx-no-target-blank": "off"
      }
    }
  ]
}
